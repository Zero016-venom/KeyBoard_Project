@model ASSIGN_Data.Models.SanPham

@{
    ViewData["Title"] = "Details";
    List<string> extensions = new List<string>() { ".jpg", ".png", ".tiff", ".gif", "jpeg" , "webp"};
}

<h3 class="text-center">Chi tiết sản phẩm</h3>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2 my-md-2">
            @Html.DisplayName("Loại sản phẩm")
        </dt>
        <dd class = "col-sm-10 my-md-2">
            @Html.DisplayFor(model => model.LoaiSP.TenLoaiSP)
        </dd>
        <dt class = "col-sm-2 my-md-2">
            @Html.DisplayName("Tên sản phẩm")
        </dt>
        <dd class = "col-sm-10 my-md-2">
            @Html.DisplayFor(model => model.Ten)
        </dd>
        <dt class = "col-sm-2 my-md-2">
            @Html.DisplayName("Giá")
        </dt>
        <dd class = "col-sm-10 my-md-2">
            @Html.DisplayFor(model => model.GiaSP)
        </dd>
        <dt class = "col-sm-2 my-md-2">
            @Html.DisplayName("Số lượng tồn")
        </dt>
        <dd class = "col-sm-10 my-md-2">
            @Html.DisplayFor(model => model.SLTon)
        </dd>
        <dt class = "col-sm-2 my-md-2">
            @Html.DisplayName("Trạng thái")
        </dt>
        <dd class = "col-sm-10 my-md-2">
            @if (Model.TrangThai == 1)
            {
               <span class="btn btn-success">Đang hoạt động</span>
            }
            else if (Model.TrangThai == 2)
            {
                <span class="btn btn-danger">Tạm ngưng</span>
            }
        </dd>
        <dt class = "col-sm-2 my-md-2">
            @Html.DisplayName("Màu sắc")
        </dt>
        <dd class = "col-sm-10 my-md-2">
            @Html.DisplayFor(model => model.MauSac)
        </dd>
        <dt class = "col-sm-2 my-md-2">
            @Html.DisplayName("Hình ảnh")
        </dt>
        <dd class = "col-sm-10 my-md-2 mt-2">
            @{
                var extension = System.IO.Path.GetExtension(Model.Anh);
            }
            @if (@extensions.Contains(extension))
            {
                <img src="~/Images/@Model.Anh" height="200px">
            }
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Sửa", "Update", new {id = Model.Id} , new { @class = "btn btn-warning text-white"})
    <a asp-action="Index" class="btn btn-secondary ms-md-2">Quay lại</a>
</div>
