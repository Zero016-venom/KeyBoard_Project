@model IEnumerable<ASSIGN_Data.Models.SanPham>

@{
    ViewData["Title"] = "Index";
    //List<string> extensions = new List<string>() { ".jpg", ".png", ".tiff", ".gif", "jpeg", "webp" };
}
<form asp-controller="SanPham" asp-action="Index" method="get">

<div class="text-center">
    <h3>Danh sách sản phẩm</h3>
</div>

<p>
    <a asp-action="Create" class="btn btn-success my-md-2">Tạo mới</a>
</p>
<table class="table">
    <thead>
        <tr>
            @*<th>
                @Html.DisplayName("Hình ảnh")
            </th>*@
            <th>
                @Html.DisplayName("Tên")
            </th>
            <th>
                @Html.DisplayName("Loại sản phẩm")
            </th>
            <th>
                @Html.DisplayName("Giá")
            </th>
            <th>
                @Html.DisplayName("Số lượng tồn")
            </th>
            <th>
                @Html.DisplayName("Trạng thái")
            </th>
            <th>
                @Html.DisplayName("Tương tác")
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            @*<td>
                @{
                    var extension = System.IO.Path.GetExtension(item.Anh);
                }
                @if (@extensions.Contains(extension))
                {
                    <img src="~/Images/@item.Anh" height="70px">
                }
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Ten)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LoaiSP.TenLoaiSP)
            </td>
            <td>
                @string.Format("{0:0,0}", item.GiaSP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SLTon)
            </td>
            <td>
                @if (item.TrangThai == 1)
                {
                    <span class="badge btn-success">Đang hoạt động</span>
                }
                else if(item.TrangThai == 2)
                {
                   <span class="badge btn-danger">Tạm ngưng</span>
                }
            </td>
            <td>
                @Html.ActionLink("Sửa", "Update", new { id = item.Id }, new { @class = "btn btn-warning text-white"}) 
                @Html.ActionLink("Chi tiết", "Details", new { id = item.Id }, new { @class = "btn btn-primary text-white"}) 
                @Html.ActionLink("Xóa", "Delete", new { id = item.Id }, new { @class = "btn btn-danger text-white"})
            </td>
        </tr>
}
    </tbody>
</table>
</form>