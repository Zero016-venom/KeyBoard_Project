@model IEnumerable<ASSIGN_Data.Models.LoaiSP>

@{
    ViewData["Title"] = "Index";
}

<h3 class="text-center">Danh sách loại sản phẩm</h3>

<p>
    <a asp-action="Create" class="btn btn-success">Tạo mới</a>
</p>
<table class="table">
    <thead>
        <tr>
            @*<th>
                @Html.DisplayNameFor(model => model.Id)
            </th>*@
            <th>
                @Html.DisplayName("Tên loại sản phẩm")
            </th>
            <th>
                @Html.DisplayName("Tương tác")
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            @*<td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.TenLoaiSP)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Update", new {  id = item.Id  }, new { @class = "btn btn-warning text-white"})
                @Html.ActionLink("Chi tiết","Details", new { id = item.Id }, new { @class = "btn btn-primary text-white"}) 
                @*@Html.ActionLink("Xóa", "Delete", new { id = item.Id }, new { @class = "btn btn-danger text-white"})*@
            </td>
        </tr>
}
    </tbody>
</table>
