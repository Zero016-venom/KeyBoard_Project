@{
	ViewBag.Title = "Đăng nhập";
}

<h3 class="text-center mt-5">Đăng nhập</h3>

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6 text-center">
            <form asp-action="Login" method="post" class="border p-4 rounded-3">
                <div class="form-group">
                    <input type="text" id="username" name="username" class="form-control" placeholder="Tên đăng nhập" required>
                </div>
                <div class="form-group">
                    <input type="password" id="password" name="password" class="form-control my-md-3" placeholder="Mật khẩu" required>
                </div>
                <button type="submit" class="btn btn-dark my-md-4 py-2 text-center w-100 text-white text-bold">Đăng nhập</button>
                <a asp-action="Create" class="btn btn-white text-dark text-center w-100">Tạo tài khoản</a>
            </form>
        </div>
    </div>
</div>
