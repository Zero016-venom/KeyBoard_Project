@model IEnumerable<ASSIGN_Data.Models.User>

@{
    ViewData["Title"] = "Index";
}

<h3 class="text-center">Danh sách tài khoản</h3>

<p>
    <a asp-action="Create" class="btn btn-success">Thêm mới tài khoản</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Họ và tên")
            </th>
            <th>
                @Html.DisplayName("Vai trò")
            </th>
            <th>
                @Html.DisplayName("Tên đăng nhập")
            </th>
            <th>
                @Html.DisplayName("Tương tác")
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HoTen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role.VaiTro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenDN)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Update", new { id = item.Id }, new { @class = "btn btn-warning text-white"}) 
                @Html.ActionLink("Chi tiết", "Details", new { id = item.Id }, new { @class = "btn btn-primary text-white"})
                @Html.ActionLink("Xóa", "Delete", new { id = item.Id },  new { @class = "btn btn-danger text-white"})
            </td>
        </tr>
}
    </tbody>
</table>
