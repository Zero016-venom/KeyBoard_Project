<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - KeyBoard</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/ASSIGN_NET104.styles.css" asp-append-version="true" />
</head>
<body>
	<header>
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
			<div class="container-fluid">
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex w-25">
					<ul class="navbar-nav flex-grow-1">
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Trang Chủ</a>
						</li>

						<li class="nav-item dropdown">
						  <a class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown">
							Quản lý
						  </a>
						  <ul class="dropdown-menu">
							<li class="nav-item">
								<a class="nav-link text-dark" asp-area="" asp-controller="SanPham" asp-action="Index">Quản lý Sản Phẩm</a>
							</li>
							<li class="nav-item">
								<a class="nav-link text-dark" asp-area="" asp-controller="LoaiSP" asp-action="Index">Loại sản phẩm</a>
							</li>
						  </ul>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="SanPham" asp-action="IndexKH">Sản phẩm</a>
						</li>
					</ul>
				</div>
				<div class="w-50 text-center">
					@*<a class="navbar-brand" style="font-size: 35px; font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif" asp-area="" asp-controller="Home" asp-action="Index">Wuque Studio</a>*@
					<a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">
						<img src="~/Images/logo.png" class="img-fluid" style="max-height: 180px; max-width: 230px;">
					</a>
				</div>
				<div class="w-25 d-flex justify-content-end">
					<a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Login">
							<img src="~/Images/user.png" class="img-fluid" style="max-height: 25px; max-width: 25px;">
					</a>
					<a class="nav-link text-dark" asp-area="" asp-controller="GioHangChiTiet" asp-action="Index">
						<img src="~/Images/grocery-store.png" class="img-fluid" style="max-height: 25px; max-width: 25px;">
					</a>
				</div>
			</div>
		</nav>
	</header>
	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<footer class="border-top footer text-muted">
		<div class="container text-end">
			Powered by Shopify © 2024, Wuque Studio 
		</div>
	</footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
